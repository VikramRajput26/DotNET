@model StudentMVC.Models.Student

@{
    ViewData["Title"] = "Add Student";
}

<h1>Add Student</h1>

<form asp-controller="Student" asp-action="AddStudent" method="post">
    <div>
        <label for="id">Student Id:</label>
        <input type="text" id="id" name="Id" value="@Model?.id" />
    </div>

    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" value="@Model?.name" />
    </div>

    <div>
        <label for="email">Email:</label>
        <input type="text" id="email" name="Email" value="@Model?.email" />
    </div>

    <div>
        <label for="address">Address:</label>
        <input type="text" id="address" name="Address" value="@Model?.address" />
    </div>

    <div>
        <label for="date">Date:</label>
        <input type="date" id="date" name="Date" value="@Model?.date.ToString("yyyy-MM-dd")" />
    </div>

    <div>
        <label for="fees">Fees:</label>
        <input type="number" id="fees" name="Fees" value="@Model?.fees" />
    </div>

    <div>
        <label for="status">Status:</label>
        <select id="status" name="Status">
            <option value="Active" selected="@(Model?.status == "Active" ? "selected" : null)">Active</option>
            <option value="Inactive" selected="@(Model?.status == "Inactive" ? "selected" : null)">Inactive</option>
        </select>
    </div>

    <button type="submit">Add Student</button>
</form>
